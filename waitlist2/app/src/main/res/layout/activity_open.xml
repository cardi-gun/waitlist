<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.OpenActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="left"
        android:text="아이디:"
        android:textSize="25dp"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        />

    <TextView
        android:id="@+id/waitListID"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="left"
        android:text="가게이름-201228-0093"
        android:textSize="25dp"
        android:paddingLeft="30dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="대기번호"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:gravity="center"
        android:text="93"
        android:textSize="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text="예약시간 :"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/bookingTime"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text=" 14 : 42분"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text="예약 대기 시간 :"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/bookingWaitingTime"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text=" 00 : 25분"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text="입장 예상 시간 :"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/entranceTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text=" 15 : 02분"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/storeLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="가게위치"
            android:textSize="30dp"
            />

        <Button
            android:id="@+id/bookingCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="예약취소"
            android:textSize="30dp" />

    </LinearLayout>

</LinearLayout>